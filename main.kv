<Label>:
    color_normal:''
    color:'yellow'
    outline_width:2
    outline_color:'black'

<TextInput>:
    background_normal:''
    background_color:'yellow'
    

WindowManager:
    MainWindow:
    SecondWindow:
    LoginWindow:
    ErrorWindow:
    VidowWindow:
    PdfWindow:
    QuestionWindow:
    Comingsoon:

<MainWindow>:
    name:'main'
    GridLayout:
        cols:1
        GridLayout:
            rows:7
            Image:
                source:'Y.png'
            Label:
                text:'what\'s your name'
                font_size:22
                size_hint:(0.1,0.3)
            TextInput:
                text:''
                size_hint:(0.1,0.3)
            Label:
                text:'what\'s your password'
                font_size:22
                size_hint:(0.1,0.3)
            TextInput:
                id:password
                text:''
                size_hint:(0.1,0.3)
            Button:
                text:'go'
                size_hint:(0.1,0.3)
                font_size:35
                on_release:
                    app.root.current='second' if password.text =='mohamed' else 'error'
                    root.manager.transition.direction='right'
            Button:
                text:'login'
                size_hint:(0.1,0.3)
                font_size:35
                on_release:
                    app.root.current='login'
                    root.manager.transition.direction='right'

            
            
<ErrorWindow>:
    name:'error'
    GridLayout:
        cols:1
        GridLayout
            rows:2
            Image:
                source:'jj.png'
            Button:
                text:'back'
                font_size:35
                size_hint:(0.1,0.2)
                on_release:
                    app.root.current='main'
                    root.manager.transition.direction='left'
        
<SecondWindow>:
    name:'second'
    GridLayout:
        cols:1
        GridLayout
            rows:6
            Label:
                size_hint:(0.1,0.2)
            Button:
                text:'video'
                font_size:35
                size_hint:(0.1,0.2)
                on_release:
                    app.root.current='video'
                    root.manager.transition.direction='right'

            Button:
                text:'pdf'
                font_size:35
                size_hint:(0.1,0.2)
                on_release:
                    app.root.current='pdf'
                    root.manager.transition.direction='right'

            Button:
                text:'question bank'
                font_size:35
                size_hint:(0.1,0.2)
                on_release:
                    app.root.current='question'
                    root.manager.transition.direction='right'

            Label:
                size_hint:(0.1,0.2)
            Button:
                text:'back'
                font_size:35
                size_hint:(0.1,0.1)
                on_release:
                    app.root.current='main'
                    root.manager.transition.direction='right'

<LoginWindow>:
    name:'login'
    GridLayout:
        cols:1
        GridLayout:
            rows:7
        Label:
            text:'enter the name'
            font_size:35
        TextInput:
            id:name
        Label:
            text:'enter the Gmail'
            font_size:35
        TextInput:
            id:Gmail
        Label:
            text:'enter the password'
            font_size:35
        TextInput:
            id:password
        Label:
            id:pa
        Button:
            text:'login'
            font_size:35
            outline_width:5
            on_release:
                app.root.current='come'
                root.manager.transition.direction='left'
            

